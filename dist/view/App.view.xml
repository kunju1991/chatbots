<mvc:View controllerName="demo.mapanalyticMap.controller.App" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns:vbm="sap.ui.vbm" xmlns:l="sap.ui.layout" height="100%" displayBlock="true" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<l:FixFlex class="fixFlexFixedSize">
						<l:fixContent>
							<Panel expandable="true" expanded="{= !${device>/system/phone} }" headerText="Description">
								<headerToolbar>
									<Toolbar>
										<Title text="Description"/>
										<ToolbarSpacer/>
										<Button id="btnLegend" icon="sap-icon://legend" press="onPressLegend" tooltip="Hide legend"/>
										<Button id="btnResize" icon="sap-icon://resize" press="onPressResize" tooltip="Minimize"/>
									</Toolbar>
								</headerToolbar>
								<content>
									<VBox class="sapUiTinyMargin">
										<Text
											text="The default route is a solid line without arrow heads. The visualization can be adapted by the application: adding arrow heads, dashed/dotted lines, route width, colors, and borderline. Another option for routes are curved routes which could be used for visualizing flight routes."/>
										<!--		<Text class="sapUiTinyMarginTop" text="See also: "/>-->
										<!--<Link class="sapUiLargeMarginLeft" text="Visual business best practices" target="_blank" href="test-resources/sap/ui/vbm/bestpractices.html"/>-->
									</VBox>
								</content>
							</Panel>
						</l:fixContent>
						<l:flexContent>
							<vbm:AnalyticMap id="vbi" width="100%" xmlns:l="sap.ui.layout" height="100%" regionClick="onRegionClick"
								regionContextMenu="onRegionContextMenu">
								<vbm:vos>
									<vbm:Routes>
										<vbm:Route position="2.3522219;48.856614;0; -74.0059731;40.7143528;0" color="rgb(117,148,34)" colorBorder="rgb(255,255,255)" linewidth="3"
											routetype="Geodesic" directionIndicator='false' start="1" click="onClickRoute" contextMenu="onContextMenuRoute"/>
										<vbm:Route position="2.3522219;48.856614;0; -118.2436849;34.0522342;0" color="rgb(92,186,230)" colorBorder="rgb(255,255,255)" linewidth="3"
											routetype="Geodesic" lineDash="10;15;5;2" click="onClickRoute" contextMenu="onContextMenuRoute"/>
									</vbm:Routes>
								</vbm:vos>
								<vbm:regions>
									<vbm:Region code="IN" color="rgba(0,109,22,1.0)"/>
									<vbm:Region code="ZA" color="rgba(0,125,192,1.0)"/>
									<vbm:Region code="KE" color="rgba(0,125,192,1.0)"/>
									<vbm:Region code="LK" color="rgba(125,125,191,1.0)"/>
								</vbm:regions>
								<vbm:legend>
									<vbm:Legend id="legend" caption="Legend" items="{/Legend}">
										<vbm:LegendItem text="{text}" color="{color}"/>
									</vbm:Legend>
								</vbm:legend>
							</vbm:AnalyticMap>
						</l:flexContent>
					</l:FixFlex>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>